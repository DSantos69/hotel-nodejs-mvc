<div class="card mt-5">
    <div class="card-body">
        <h3 class="text-center bg-success text-white py-1 shadow-lg">Criação dos Quartos</h3>
        <hr>
        <form action="/admin/addOrEditQuarto" method="POST">
            <input type="hidden" name="id" value="{{quartos.id}}" />
            <div class="row g-3 mt-2">
                <div class="col-4">
                    <label for="numero">Número do quarto: </label>
                    <input id="numero" name="numero" type="number" class="form-control" placeholder="Número do quarto:"
                        aria-describedby="helpId" value="{{quartos.numero}}">
                        {{quartos.numeroErr}}
                </div>
                <div class="col-4">
                    <label for="tipo">Tipo do quarto: </label>
                    <input id="tipo" name="tipo" type="text" class="form-control" placeholder="tipo do quarto:"
                        aria-describedby="helpId" value="{{quartos.tipo}}">
                        {{quartos.tipoErr}}
                </div>
                <div class="col-4">
                    <label for="maxPessoas">Quantidade máxima de pessoas:</label>
                    <input type="number" id="maxPessoas" name="maxPessoas" class="form-control"
                        placeholder="Quantidade máxima de pessoas: " aria-describedby="helpId" value="{{quartos.maxPessoas}}">
                    
                    {{quartos.maxPessoasErr}}
                </div>
                <div class="col-6">
                    <label for="criancas">Quantidade máxima de crianças:</label>
                    <input type="Number" id="criancas" name="criancas" class="form-control"
                        placeholder="Quantidade máxima de crianças: " aria-describedby="helpId"
                        value="{{quartos.criancas}}">
                        {{quartos.criancasErr}}
                </div>
                <div class="col-6">
                    <label for="preco">Preço do quarto:</label>
                    <input type="Number" id="preco" name="preco" class="form-control" placeholder="Preço do Quarto: "
                        aria-describedby="helpId" value="{{quartos.preco}}">
                        {{quartos.precoErr}}
                </div>
            </div>
            <div class="text-center mx-auto">
                <button type="submit" class="btn btn-success mt-3">Criar quarto</button>
            </div>
        </form>
    </div>
</div>