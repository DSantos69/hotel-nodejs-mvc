<div class="my-4 text-center">
    <h3>Painel de controle:</h1>
    <div class="btn-group">
        <a href="/admin/" class="btn btn-primary">Quartos</a>
        <a href="/admin/usuarios" class="btn btn-primary active">Usuários</a>
        <a href="/admin/reservas" class="btn btn-primary">Reservas</a>
    </div>
</div>
<div class="card text-white bg-dark mx-4 mb-5">
    <div class="card-body">
        <div class="row">
            <div class="col-10">
                <h3 class="text-left mx-5">Usuários</h3>
            </div>
            <div class="col">
                <a href="/users/cadastrar"><button type="button" class="btn btn-success mt-2">Criar
                        Usuario</button></a>
            </div>
        </div>
        <hr>
        {{#each usuarios}}
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th scope="col">Nome:</th>
                    <th scope="col">Email:</th>
                    <th scope="col">Senha:</th>
                    <th scope="col">Opções:</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    
                    <td>{{nome}}</td>
                    <td>{{email}}</td>
                    <td>{{senha}}</td>

                    <td>
                        <a href="/users/admin/editUser/{{_id}}" class="btn btn-warning" role="button"
                            data-bs-toggle="button">Editar</a>
                        <a href="/users/admin/delUser/{{_id}}" class="btn btn-danger" role="button"
                            data-bs-toggle="button">Apagar</a></td>
                    </td>
                </tr>

            </tbody>
        </table>
        {{else}}
        <h5>Não há usuários criados</h3>
        {{/each}}
    </div>
</div>